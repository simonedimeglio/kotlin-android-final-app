<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/questionrow"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/correctAnswerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="60dp"
                android:text="RISPOSTA CORRETTA"
                android:textSize="15dp"
                android:textColor="@color/purple_500"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/answer3View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="130dp"
                android:layout_marginEnd="60dp"
                android:text="RISPOSTA3"
                android:textSize="15dp"
                android:textColor="@color/purple_200"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/answer2View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="60dp"
                android:text="RISPOSTA2"
                android:textSize="15dp"
                android:textColor="@color/purple_200"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/answer1View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="60dp"
                android:text="RISPOSTA1"
                android:textSize="15dp"
                android:textColor="@color/purple_200"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/questionView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="60dp"
                android:text="PROVA DOMANDA"
                android:textSize="15dp"
                android:textColor="@color/purple_700"
                android:textStyle="bold"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>